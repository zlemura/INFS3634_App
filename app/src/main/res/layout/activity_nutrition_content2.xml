<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NutritionModule.NutritionContentActivity2">

    <TextView
        android:id="@+id/nutritionContenxtPage2Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="What does a balanced diet look like?"
        android:textSize="24sp"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/nutritionContentPage2Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Another important consideration for a university student is what a healthy diet looks like, especially on a budget.\n\nBelow is an extract from an Australian Government website outlining healthy food choices.This will be important for your final module test!"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/nutritionContenxtPage2Title"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <WebView
        android:id="@+id/nutritionContentPage2WV"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/nutritionContentPage2Description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nutritionContentPage2NextBtn"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/nutritionContentPage2NextBtn"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Next"
        android:textSize="24sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>