<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NutritionModule.NutritionContentActivity">

    <TextView
        android:id="@+id/nutritionContenxtPage1Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calories &amp; Kilojoules"
        android:textSize="24sp"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/nutritionContentPage1Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Below is an extract from the Health Direct Australia website explaining Kilojoules, what they are and balancing intake. \n \nThis is crucial especially for univsersity students trying to lead a healthy lifestyle."
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/nutritionContenxtPage1Title"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <WebView
        android:id="@+id/nutritionContentPage1WV"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/nutritionContentPage1Description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nutritionContentPage1NextBtn"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/nutritionContentPage1NextBtn"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Next"
        android:textSize="24sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>