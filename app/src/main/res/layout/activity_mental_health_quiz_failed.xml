<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MentalHealthModuleFragments.MentalHealthQuizFailedActivity">

    <TextView
        android:id="@+id/moduleFailedMHTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Module Quiz Failed"
        android:textSize="28sp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical"
        app:lottie_fileName="wrong.json"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:layout_constraintTop_toBottomOf="@id/moduleFailedMHTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/moduleFailedMHDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/mental_fail"
        android:textColor="#000000"
        android:paddingHorizontal="15dp"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/animation_view"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <com.google.android.material.button.MaterialButton
        style="@style/Widget.AppCompat.Button"
        android:id="@+id/retryMHBtn"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="@string/module_return"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginHorizontal="6dp"
        app:cornerRadius="8dp"
        app:rippleColor="#33AAAAAA"
        app:backgroundTint="@color/colorPrimary"
        />

</androidx.constraintlayout.widget.ConstraintLayout>