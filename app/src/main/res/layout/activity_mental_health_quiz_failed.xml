<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MentalHealthModuleFragments.MentalHealthQuizFailedActivity">

    <TextView
        android:id="@+id/moduleFailedMHTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Module Quiz Failed"
        android:textSize="28sp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/moduleFailedMHDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="You did not score at least 80% on the final module quiz.\n\nUnfortunately, we do not want to tell you want questions you answered correctly in a bid to ensure you full understand and are across the content.\n\nUse the button below to take you back to the beginning of the module so you can revise the content, and later re-take the quiz."
        android:textColor="#000000"
        android:paddingHorizontal="15dp"
        android:textSize="18sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/moduleFailedMHTitle"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <com.google.android.material.button.MaterialButton
        style="@style/Widget.AppCompat.Button"
        android:id="@+id/retryMHBtn"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="@string/module_return"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginHorizontal="6dp"
        app:cornerRadius="8dp"
        app:rippleColor="#33AAAAAA"
        app:backgroundTint="@color/colorPrimary"
        />

</androidx.constraintlayout.widget.ConstraintLayout>