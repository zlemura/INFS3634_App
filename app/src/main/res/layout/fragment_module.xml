<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModuleFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/excerciseModuleButton"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="Excercise Module"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/nutritionModuleButton"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="Nutrition Module"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/excerciseModuleButton"
            app:layout_constraintLeft_toLeftOf="@id/excerciseModuleButton"
            app:layout_constraintRight_toRightOf="@id/excerciseModuleButton"/>

        <Button
            android:id="@+id/mentalHealthModuleButton"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:text="Mental Health Module"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/nutritionModuleButton"
            app:layout_constraintLeft_toLeftOf="@id/nutritionModuleButton"
            app:layout_constraintRight_toRightOf="@id/nutritionModuleButton"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>