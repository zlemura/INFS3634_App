<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MentalHealthModuleFragments.MentalHealthContent1Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mentalHealthContentPage1Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mental Health of Students"
            android:textSize="24sp"
            android:textColor="#000000"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/mentalHealthContentPage1Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Below is an article from an Australian non-profit promoting young peoples mental health, Headspace.\n\nThis article discusses the statistics of mental health amongst students. It is important to take notes of the survey results section, as it will be assessed in the final quiz."
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/mentalHealthContentPage1Title"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <WebView
            android:id="@+id/mentalHealthContentPage1WV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@+id/mentalHealthContentPage1Description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>