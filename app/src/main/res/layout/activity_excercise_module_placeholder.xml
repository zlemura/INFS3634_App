<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExcerciseModulePlaceholder">

        <FrameLayout
            android:id="@+id/fragment_container_module_placeholder_excercise"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomNavView_module_placeholder_excercise"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavView_module_placeholder_excercise"
            android:layout_width="match_parent"
            app:labelVisibilityMode="labeled"
            android:layout_height="wrap_content"
            app:itemBackground="@color/colorPrimary"
            app:itemTextColor="#ffffff"
            app:itemIconTint="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/module_navigation"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
