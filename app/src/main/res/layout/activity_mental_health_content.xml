<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MentalHealthModule.MentalHealthContentActivity">

    <TextView
        android:id="@+id/mentalHealthContentPage1Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Physical Activity &amp; Mental Health"
        android:textSize="24sp"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/mentalHealthContentPage1Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="The article below from Health Direct Australia outlines the importance of daily physical activity - not only for physical but also for mental health.\n\nAn important takeaway from this module is that the Australia government reccomends adults partake in 30 minutes of moderate to intense physical activity, most days of the week."
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/mentalHealthContentPage1Title"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <WebView
        android:id="@+id/mentalHealthContentPage1WV"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintTop_toBottomOf="@+id/mentalHealthContentPage1Description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/mentalHealthContentPage1NextBtn"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="Next"
        android:textSize="24sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>