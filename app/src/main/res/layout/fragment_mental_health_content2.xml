<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MentalHealthModuleFragments.MentalHealthContent2Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/mentalHealthContentPage2Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Physical Activity &amp; Mental Health"
            android:textSize="24sp"
            android:textColor="#000000"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/mentalHealthContentPage2Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="The article below from Health Direct Australia outlines the importance of daily physical activity - not only for physical but also for mental health.\n\nAn important takeaway from this module is that the Australia government reccomends adults partake in 30 minutes of moderate to intense physical activity, most days of the week."
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/excerciseContentPage1Title"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <WebView
            android:id="@+id/mentalHealthContentPage2WV"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@+id/excerciseContentPage1Description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>