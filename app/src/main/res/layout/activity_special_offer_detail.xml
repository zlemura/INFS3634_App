<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecialOfferDetailActivity">

    <TextView
        android:id="@+id/specialOfferPlaceNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offer Place Name"
        android:textSize="26sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/specialOfferIV"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toRightOf="@id/specialOfferPlaceNameTV"
        app:layout_constraintTop_toTopOf="@id/specialOfferPlaceNameTV"
        app:layout_constraintBottom_toBottomOf="@id/specialOfferPlaceNameTV"/>

    <TextView
        android:id="@+id/specialOfferDescriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingHorizontal="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:text="This is description text for the special offer"
        app:layout_constraintTop_toBottomOf="@id/specialOfferIV"
        app:layout_constraintBottom_toTopOf="@id/specialOfferQRCode"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/specialOfferQRCode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>