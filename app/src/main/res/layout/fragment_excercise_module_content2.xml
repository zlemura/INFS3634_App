<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExcerciseModuleFragments.ExcerciseModuleContent2Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/excerciseContentPage2Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10,000 Steps"
            android:textSize="24sp"
            android:textColor="#000000"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/excerciseContentPage2Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="The goal of 10,000 steps is the recommended daily step target for healthy adults. This goal encourages the accumulation of incidental activity throughout the whole day.\n\n Read the article below carefully, as the final module quiz is reliant on the content below!"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/excerciseContentPage2Title"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <WebView
            android:id="@+id/excerciseContentPage2WV"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:layout_constraintTop_toBottomOf="@+id/excerciseContentPage2Description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>